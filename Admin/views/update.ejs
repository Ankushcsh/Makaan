<%- include("common/head") %>


    <%-include("common/navbar") %>


        <div class="panel panel-info">
            <div class="panel-heading">
                ADD PROPERTY
            </div>
            <div class="panel-body">
                <form role="form" action="/update/<%=sdata.pdata[0]._id %>" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Property Name</label>
                        <input class="form-control" type="text" name="Pname" value="<%=sdata.pdata[0].Pname%>">
                        <p class="help-block">Help text here.</p>
                    </div>
                    <div class="form-group">
                        <label>ADDRESS</label>
                        <input class="form-control" type="text" name="ADDRESS" value="<%=sdata.pdata[0].ADDRESS%>">
                        <p class="help-block">Help text here.</p>
                    </div>
                    <div class="form-group">
                        <label>SIZE in sqft</label>
                        <input class="form-control" type="text" name="size" value="<%=sdata.pdata[0].size%>">
                        <p class="help-block">Help text here.</p>
                    </div>
                    <div class="form-group">
                        <label>Bedroom</label>
                        <input class="form-control" type="number" name="bed" value="<%=sdata.pdata[0].bed%>">
                        <p class="help-block">Help text here.</p>
                    </div>
                    <div class="form-group">
                        <label>Washroom</label>
                        <input class="form-control" type="number" name="wroom" value="<%=sdata.pdata[0].wroom%>">
                        <p class="help-block">Help text here.</p>
                    </div>

                    <div class="form-group">
                        <label>Property Agent</label>
                        <select class="form-control" name="agent">
                            <option value="">select Agent Name</option>
                            <% for(let k of sdata.adata) {%>
                                <option value="<%=k._id%>">
                                    <%=k.name%>
                                </option>
                                <% } %>

                        </select>
                    </div>


                    <div class="form-group">
                        <label>Property Catagory</label>
                        <select class="form-control" name="catagory">
                            <option value=""><%=sdata.pdata[0].catagory%></option>
                            <% for(let k of sdata.pcat) {%>

                                <option value="<%=k._id%>">
                                    <%=k.cat%>
                                </option>
                                <% } %>

                        </select>
                    </div>
                    <div class="form-group">
                        <label>Property Type</label>
                        <select class="form-control" name="types">
                            <option value="">Select Type</option>
                            <% for(let k of sdata.ptyp) {%>
                                <option value="<%=k._id%>">
                                    <%=k.types%>
                                </option>
                                <% } %>

                        </select>
                    </div>




                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" type="text" name="Price" value="<%=sdata.pdata[0].Price%>">
                        <p class="help-block">Enter Value.</p>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="3" type="text" name="Pdesc"
                            > <%=sdata.pdata[0].Pdesc%></textarea>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="cimg" value="<%=sdata.pdata[0].image %>" >
                    </div>
                 
                    <div class="form-group">
                        <label>image</label>
                        <input class="form-control" type="file" name="image" value="" >
                        <p class="help-block">photograph</p>
                        <img src="/images/<%=sdata.pdata[0].image %>">
                    </div>
                   
.

                    <button type="submit" class="btn btn-info">SUBMIT </button>



                </form>
            </div>
        </div>


        <%-include("common/footer") %>